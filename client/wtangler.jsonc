{
	"$schema": "./node_modules/wrangler/config-schema.json",
	"name": "homethings",
	"compatibility_date": "2026-02-28",
	"workers_dev": true,
	"preview_urls": false,
	"keep_vars": true, // If false it will overwrite envs in Cloudflare dashboard
	"assets": {
		"directory": "./build/client",
		"not_found_handling": "single-page-application"
	},
	"build": {
		"watch_dir": ["src"], // Applies to dev/local mode only
		"command": "bun install && bun run build"
	}
}
